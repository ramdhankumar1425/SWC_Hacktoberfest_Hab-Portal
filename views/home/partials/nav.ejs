<section id="navigation" class="hostelsnav">
  <div class="md:px-20 lg:px-32 py-3 flex justify-center">
    <img
      id="nav_logo"
      src="/hab/images/headers/c.png"
      alt="logo"
      class="nav_logo hidden md:inline mr-5"
    />
    <div class="w-1/3 sm:w-1/4 lg:w-44 flex justify-end items-center">
      <a
        href="https://online.iitg.ac.in/sa/"
        class="w-9/12 sm:w-full mr-3 sm:mr-5"
        target="_blank"
      >
        <button
          class="w-full py-0.5 flex justify-center bg-white rounded-sm"
          style="border: 1px solid #8a8886"
        >
          <img
            src="/hab/images/nav/iit_logo.png"
            alt="logo"
            class="max-w-full hidden sm:flex"
            style="transform: scale(0.9)"
          />
          <span class="max-w-full ml-0.5 hidden sm:flex">HAB Portal</span>
          <span class="max-w-full ml-0.5 flex sm:hidden">Login</span>
        </button>
      </a>
    </div>
    <div
      class="w-2/3 sm:3/4 lg:w-max my-1 flex justify-start items-center relative"
    >
      <ul class="tabs pl-3 sm:pl-4 font-semibold flex gap-4 sm:gap-0">
        <li
          class="tab inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100 tabStyle"
        >
          <a class="active" href="#home">Home</a>
        </li>
        <li
          class="tab inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a href="#notices" onclick="fetchAPINotices(`<%= BASEURL %>`)"
            >Notices</a
          >
        </li>
        <li
          class="tab hidden sm:inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a href="#forms" onclick="fetchAPIForms(`<%= BASEURL %>`)">Forms</a>
        </li>
        <li
          class="tab hidden sm:inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a href="#hostels" onclick="fetchAPIHostels(`<%= BASEURL %>`)"
            >Hostels</a
          >
        </li>
        <li
          class="tab hidden lg:inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a
            href="#management"
            onclick="fetchAPIFunctionaries(`<%= BASEURL %>`)"
            >Functionaries</a
          >
        </li>
        <li
          class="tab hidden lg:inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a href="#ordinance" onclick="fetchAPIOrdinance(`<%= BASEURL %>`)"
            >Ordinance and Rules</a
          >
        </li>
        <li
          class="tab hidden lg:inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a href="#utils" onclick="fetchAPIUtils(`<%= BASEURL %>`)"
            >Utilities</a
          >
        </li>
      </ul>

      <!-- Triple dot -->
      <button
        class="lg:hidden focus:outline-none px-2 py-[2px]"
        id="moreOptionsButton"
      >
        <span>◦◦◦</span>
      </button>

      <!-- Hidden options -->
      <div
        id="moreOptions"
        class="hidden lg:hidden absolute top-9 right-0 bg-white flex flex-col gap-3 py-3 px-2 mt-2"
      >
        <div
          class="sm:hidden px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a href="#forms" onclick="fetchAPIForms(`<%= BASEURL %>`)">Forms</a>
        </div>
        <hr class="sm:hidden" />
        <div
          class="sm:hidden px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a
            href="#management"
            onclick="fetchAPIFunctionaries(`<%= BASEURL %>`)"
            >Hostels</a
          >
        </div>
        <hr class="sm:hidden" />
        <div
          class="inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a
            href="#management"
            onclick="fetchAPIFunctionaries(`<%= BASEURL %>`)"
            >Functionaries</a
          >
        </div>
        <hr />
        <div
          class="inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a href="#ordinance" onclick="fetchAPIOrdinance(`<%= BASEURL %>`)"
            >Ordinance and Rules</a
          >
        </div>
        <hr />
        <div
          class="inline-block px-1.5 sm:px-3 text-black text-opacity-60 hover:text-opacity-100"
        >
          <a href="#utils" onclick="fetchAPIUtils(`<%= BASEURL %>`)"
            >Utilities</a
          >
        </div>
      </div>
    </div>
  </div>
</section>
